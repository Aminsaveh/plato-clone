<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordGuess">
    <EditText
            android:id="@+id/letter3"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:ems="10"
            android:visibility="invisible"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="X"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintStart_toEndOf="@+id/letter2"
            app:layout_constraintTop_toBottomOf="@+id/line" />
    <EditText
            android:id="@+id/letter1"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:gravity="center"
            android:hint="X"
            android:inputType="textPersonName"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />
    <EditText
            android:id="@+id/letter5"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="X"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintStart_toEndOf="@+id/letter4"
            app:layout_constraintTop_toBottomOf="@+id/line" />

    <EditText
            android:id="@+id/letter2"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:ems="10"
            android:visibility="invisible"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="X"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintStart_toEndOf="@+id/letter1"
            app:layout_constraintTop_toBottomOf="@+id/line" />
    <EditText
            android:id="@+id/letter6"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:ems="10"
            android:visibility="invisible"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="X"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toEndOf="@+id/letter5"
            app:layout_constraintTop_toBottomOf="@+id/line" />

    <EditText
            android:id="@+id/letter4"
            android:layout_width="46dp"
            android:layout_height="75dp"
            android:ems="10"
            android:visibility="invisible"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="X"
            app:layout_constraintBottom_toTopOf="@+id/wg_check_btn"
            app:layout_constraintStart_toEndOf="@+id/letter3"
            app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="==============================="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.522" />

    <EditText
            android:id="@+id/wg_set_word_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:ems="10"
            android:hint="Word(at most 6 letters)"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
            android:id="@+id/player1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text=" Please choose your word"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Waiting for player2..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wg_set_word_edit_text" />

    <Button
            android:id="@+id/wg_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:text="Start"
            app:layout_constraintBottom_toTopOf="@+id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintStart_toEndOf="@+id/wg_set_word_edit_text"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/wg_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.833" />

    <TextView
            android:id="@+id/chance_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="Chances Left = 0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wg_check_btn"
            app:layout_constraintVertical_bias="0.978" />
</androidx.constraintlayout.widget.ConstraintLayout>
